<Window x:Class="EasySave_GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasySave_GUI.ViewModels"
        xmlns:Models="clr-namespace:EasySave_GUI.Models"
        mc:Ignorable="d"
        Height="650" Width="920"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True">
    <Window.DataContext>
        <local:ViewModel />
    </Window.DataContext>
    <Window.Resources>
        <ObjectDataProvider x:Key="enumValues"
            MethodName="GetValues" ObjectType="{x:Type System:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="Models:BackupType"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </Window.Resources>
    <Border Background="#f0f0f0"
            CornerRadius="20">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="120"/>
                <RowDefinition Height="280"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Image Grid.Row="0" Grid.Column="1"
                   Source="\image\logolongremovebg.png"
                   HorizontalAlignment="Left"
                   Margin="20,30,0,0" />
            <Image Grid.Row="0" Grid.Column="1"
                   Source="\image\langue.png"
                   HorizontalAlignment="right"
                   Margin="0,30,20,0" />

            <StackPanel Grid.Row="1" Grid.Column="1"
                        Orientation="Horizontal">
                <Border CornerRadius="6"
                            BorderBrush="#B49CC9"
                            BorderThickness="6"
                            Margin="10"
                            Width="600"
                            Height="250"       
                            Background="#B49CC9"  
                            HorizontalAlignment="Left"
                            VerticalAlignment="top">
                    <StackPanel Margin="20,5,5,5"
                                    RenderTransformOrigin="0.5,0.5">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <Label FontWeight="Bold"
                                    FontSize="18"
                                    Height="40"                       
                                    Foreground="White"
                                    Content="Appellation"/>
                            <TextBox Height="30"
                                    TextWrapping="Wrap"
                                    Width="300"
                                    Margin="50,0,0,0"
                                    VerticalAlignment="Center"
                                    FontSize="15"
                                    VerticalContentAlignment="Center" 
                                    Text="{Binding NewBackup.Name}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal"
                                        Margin="0,0,0,5">
                            <Label FontWeight="Bold"
                                    FontSize="18"
                                    Height="40"                       
                                    Foreground="White"
                                    Content="Source"/>
                            <TextBox 
                                    Height="30"
                                    TextWrapping="NoWrap"
                                    AcceptsReturn="False" 
                                    Width="300"
                                    Margin="91,0,0,0"
                                    VerticalAlignment="Center"
                                    FontSize="15"
                                    VerticalContentAlignment="Center" 
                                    Text="{Binding NewBackup.Source}"/>
                            <Button Height="30" BorderThickness="0"
                                        Width="50"
                                        Margin="20,0,0,0"
                                        FontSize="18"
                                        Foreground="White"
                                        Style="{StaticResource brosehover}" 
                                        Content=". . ." Click="Button_Click"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <Label FontWeight="Bold"
                                    FontSize="18"
                                    Height="40"                       
                                    Foreground="White"
                                    Content="Destination"/>
                            <TextBox
                                    Height="30"
                                    TextWrapping="NoWrap"
                                    AcceptsReturn="False" 
                                    Width="300"
                                    Margin="50,0,0,0"
                                    VerticalAlignment="Center"
                                    FontSize="15"
                                    VerticalContentAlignment="Center"
                                    Text="{Binding NewBackup.Destination}"/>
                            <Button Height="30" BorderThickness="0"
                                        Width="50"
                                        Margin="20,0,0,0"
                                        FontSize="18"
                                        Foreground="White"
                                        Style="{StaticResource brosehover}" 
                                        Content=". . ." Click="Button_Click_1"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <Label FontWeight="Bold"
                                    FontSize="18"
                                    Height="40"                       
                                    Foreground="White"
                                    Content="Type" Width="107"/>
                            <ComboBox Background="White" FontSize="15" VerticalContentAlignment="Center" Margin="50,0,0,0" x:Name="ComboBox1" VerticalAlignment="Center" Width="300" Height="30" BorderBrush="White" SelectedItem="{Binding NewBackup.Type}" ItemsSource="{Binding Source={StaticResource enumValues}}">
                                
                            </ComboBox>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <Label FontWeight="Bold"
                                    FontSize="18"
                                    Height="40"                       
                                    Foreground="White"
                                    Content="Cryptage" Width="107"/>
                            <TextBox 
                                    Height="30"
                                    TextWrapping="Wrap"
                                    Width="300"
                                    Margin="50,0,0,0"
                                    Text="{Binding Preferences.CryptExt}"
                                    VerticalAlignment="Center"
                                    FontSize="15"
                                    VerticalContentAlignment="Center" />
                        </StackPanel>
                    </StackPanel>
                </Border>
                <StackPanel>
                    <Button HorizontalAlignment="Right" 
                            Margin="10"
                            Height="50" 
                            Width="180"
                            FontSize="18"
                            Foreground="White"
                            Content="Ajouter"
                            FontWeight="Bold"
                            Style="{StaticResource btnHover}"
                            Command="{Binding AddTaskCommand}" CommandParameter="{Binding NewBackup}" Click="Button_Click_2"/>

                    <Button HorizontalAlignment="Right" 
                            Margin="10,8"
                            Height="50" 
                            Width="180"
                            FontSize="18"
                            Foreground="White"
                            Content="Lancer"
                            FontWeight="Bold"
                            Style="{StaticResource btnHover}" 
                            Command="{Binding LaunchCommand}"/>

                    <Button HorizontalAlignment="Right" 
                            Margin="10,8"
                            Height="50" 
                            Width="180"
                            FontSize="18"
                            Foreground="White"
                            Content="Supprimer"
                            FontWeight="Bold"
                            Style="{StaticResource btnHover}" 
                            Command="{Binding DeleteTaskCommand}"/>

                    <Button HorizontalAlignment="Right" 
                            Margin="10,8"
                            Height="50" 
                            Width="180"
                            FontSize="18"
                            Foreground="White"
                            Content="Quitter"
                            FontWeight="Bold"
                            Style="{StaticResource btnHover}" 
                            Command="" Click="Button_Click_2"/>
                </StackPanel>

            </StackPanel>


            <DataGrid Grid.Row="2" Grid.Column="1" 
                      x:Name="EasySave"
                      Height="200" Width="815" 
                      HorizontalAlignment="Left" 
                      Margin="0,15,0,0"   
                      VerticalAlignment="Top" 
                      RowHeight="25" 
                      FontSize="15"
                      Background="Transparent" 
                      RowBackground="White"
                      GridLinesVisibility="Vertical" 
                      HeadersVisibility="All"  
                      BorderBrush="#F0F0F0" 
                      BorderThickness="0"
                      HorizontalScrollBarVisibility="Visible" 
                      SelectionMode="Single"  
                      HorizontalGridLinesBrush="Green"
                      VerticalGridLinesBrush="#F0F0F0"
                      ItemsSource="{Binding Backups, Mode=TwoWay}"   
                      SelectedItem="{Binding Backup}" CurrentItem="{Binding Backup}">
            </DataGrid>


        </Grid>
    </Border>


</Window>